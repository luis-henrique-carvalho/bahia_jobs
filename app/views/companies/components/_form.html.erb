
<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card-body">
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :url %>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :founded_date, as: :date, html5: true %>
        </div>
        <div class="col-md-6">
          <%= f.input :employee_count %>
        </div>
      </div>

      <%= f.input :summary, input_html: { rows: 5} %>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :contact_email %>
        </div>
        <div class="col-md-6">
          <%= f.input :contact_phone %>
        </div>
      </div>

      <div class="form-group">
        <%= render "companies/components/image_form", f: f %>
      </div>
    </div>
  </div>

  <div class="card-footer text-right">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", companies_path, class: "btn btn-secondary" %>
  </div>
<% end %>
